{% extends 'layout.html.twig' %}

{% block body %}
  <div class="mappa" style="width: 800px; margin: 50px auto;">
    <div id="map"></div>
  </div>

  <table width="100%" border="1" cellspacing="0" cellpadding="4">
    <thead>
    <tr>
      <th>Contratto</th>
      <th id="name">Nome</th>
      {# <th>Tipologia</th>
                <th>Contratto</th> #}
      <th>Anno</th>
      <th>Sup</th>
      <th>Locali</th>
      <th>Prezzo</th>
      {# <th>Prezzo Superficie</th> #}
      <th>Diritto di sup</th>
      <th>Doppi servizi</th>
      <th>Doppia esp</th>
      <th>Balcone</th>
      <th>Terrazza</th>
      <th>Giardino</th>
      {# <th>Ascensore</th>
                <th>Piano</th>
                <th>Riscaldamento</th> #}
